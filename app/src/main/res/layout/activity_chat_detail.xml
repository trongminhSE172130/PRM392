<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#F5F5F5"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:titleTextColor="#333333">

        <!-- Custom toolbar content -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginEnd="16dp">

            <!-- User Avatar -->
            <FrameLayout
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="12dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_circle"
                    android:backgroundTint="#E3F2FD" />

                <ImageView
                    android:id="@+id/ivToolbarAvatar"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_person"
                    app:tint="#2196F3" />

            </FrameLayout>

            <!-- User Info -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvToolbarTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Customer Support"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#333333" />

                <TextView
                    android:id="@+id/tvOnlineStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Online"
                    android:textSize="12sp"
                    android:textColor="#4CAF50" />

            </LinearLayout>

            <!-- Action Icons -->
            <ImageView
                android:id="@+id/ivCall"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_phone"
                android:layout_marginEnd="16dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="4dp"
                app:tint="#666666"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/ivMoreOptions"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/ic_menu_more"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="4dp"
                app:tint="#666666" />

        </LinearLayout>

    </androidx.appcompat.widget.Toolbar>

    <!-- Chat Messages Container -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/chat_background">

        <!-- Messages RecyclerView -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewMessages"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:clipToPadding="false"
            android:scrollbars="vertical" />

        <!-- Loading Messages -->
        <LinearLayout
            android:id="@+id/layoutLoadingMessages"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="32dp"
            android:background="#F8F9FA"
            android:visibility="gone">

            <ProgressBar
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginBottom="16dp"
                android:indeterminateTint="#2196F3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Loading messages..."
                android:textSize="16sp"
                android:textColor="#666666" />

        </LinearLayout>

        <!-- Empty Messages -->
        <LinearLayout
            android:id="@+id/layoutEmptyMessages"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="32dp"
            android:background="#F8F9FA"
            android:visibility="gone">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_chat"
                android:layout_marginBottom="16dp"
                android:alpha="0.3"
                app:tint="#2196F3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Start a conversation"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Send a message to begin your conversation"
                android:textSize="14sp"
                android:textColor="#666666"
                android:gravity="center" />

        </LinearLayout>

    </FrameLayout>

    <!-- Message Input Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:elevation="8dp">

        <!-- Typing Indicator -->
        <LinearLayout
            android:id="@+id/layoutTypingIndicator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="12dp"
            android:background="#F0F0F0"
            android:visibility="gone">

            <ProgressBar
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginEnd="8dp"
                android:indeterminateTint="#2196F3"
                style="?android:attr/progressBarStyleSmall" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Support is typing..."
                android:textSize="12sp"
                android:textColor="#666666"
                android:textStyle="italic" />

        </LinearLayout>

        <!-- Input Container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp">

            <!-- Attachment Button -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_marginEnd="8dp"
                app:cardCornerRadius="22dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="#F5F5F5"
                app:strokeWidth="0dp">

                <ImageView
                    android:id="@+id/btnAttachment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_add"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:padding="10dp"
                    app:tint="#666666" />

            </com.google.android.material.card.MaterialCardView>

            <!-- Message Input -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <!-- File Preview (when file is selected) -->
                <LinearLayout
                    android:id="@+id/layoutFilePreview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="8dp"
                    android:background="#E3F2FD"
                    android:layout_marginBottom="8dp"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/ivFileIcon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_image"
                        android:layout_marginEnd="8dp"
                        app:tint="#2196F3" />

                    <TextView
                        android:id="@+id/tvFileName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="image.jpg"
                        android:textSize="14sp"
                        android:textColor="#333333" />

                    <ImageView
                        android:id="@+id/btnRemoveFile"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/ic_menu_close_clear_cancel"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:padding="4dp"
                        app:tint="#666666" />

                </LinearLayout>

                <!-- Text Input Container -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    app:cardCornerRadius="24dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="#F8F9FA"
                    app:strokeWidth="1dp"
                    app:strokeColor="#E8E8E8">

                    <!-- Text Input -->
                    <EditText
                        android:id="@+id/etMessage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Type a message..."
                        android:background="@android:color/transparent"
                        android:textSize="16sp"
                        android:textColor="#2C2C2C"
                        android:textColorHint="#999999"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp"
                        android:maxLines="4"
                        android:minHeight="48dp"
                        android:inputType="textMultiLine|textCapSentences"
                        android:scrollbars="vertical" />

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

            <!-- Send Button -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginStart="8dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="3dp"
                app:cardBackgroundColor="#2196F3"
                app:strokeWidth="0dp">

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/btnSend"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@android:drawable/ic_menu_send"
                    app:backgroundTint="@android:color/transparent"
                    app:tint="@color/white"
                    app:fabSize="mini"
                    app:borderWidth="0dp"
                    app:elevation="0dp"
                    android:enabled="false" />

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </LinearLayout>

</LinearLayout> 