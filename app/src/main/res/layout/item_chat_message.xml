<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="12dp"
    android:paddingEnd="12dp"
    android:paddingTop="2dp"
    android:paddingBottom="2dp">

    <!-- Received Message Layout -->
    <LinearLayout
        android:id="@+id/layoutReceivedMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="start"
        android:layout_marginBottom="4dp"
        android:visibility="gone">

        <!-- Sender Avatar -->
        <FrameLayout
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginEnd="10dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="8dp">

            <!-- Avatar Background -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardCornerRadius="18dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="#E8F5E8">

                <ImageView
                    android:id="@+id/ivSenderAvatar"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_person"
                    app:tint="#4CAF50" />

            </com.google.android.material.card.MaterialCardView>

        </FrameLayout>

        <!-- Message Content -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginEnd="60dp">

            <!-- Sender Name (for multi-user chats) -->
            <TextView
                android:id="@+id/tvSenderName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Store Support"
                android:textSize="12sp"
                android:textColor="#4CAF50"
                android:textStyle="bold"
                android:layout_marginStart="2dp"
                android:layout_marginBottom="3dp"
                android:visibility="visible" />

            <!-- Message Bubble -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="#F8F9FA"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:minWidth="60dp"
                    android:maxWidth="280dp">

                    <!-- Message Text -->
                    <TextView
                        android:id="@+id/tvReceivedMessage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hello! How can I help you today?"
                        android:textSize="15sp"
                        android:textColor="#2C2C2C"
                        android:lineSpacingExtra="2dp"
                        android:lineSpacingMultiplier="1.1" />

                    <!-- Image Attachment -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cvReceivedImage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="1dp"
                        android:visibility="gone">

                        <ImageView
                            android:id="@+id/ivReceivedImage"
                            android:layout_width="200dp"
                            android:layout_height="150dp"
                            android:scaleType="centerCrop"
                            android:background="#F5F5F5" />

                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Message Info -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginStart="16dp"
                android:layout_marginTop="4dp">

                <TextView
                    android:id="@+id/tvReceivedTimestamp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2:30 PM"
                    android:textSize="11sp"
                    android:textColor="#9E9E9E" />

                <!-- Read Status for received messages -->
                <TextView
                    android:id="@+id/tvReceivedStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" â€¢ Read"
                    android:textSize="11sp"
                    android:textColor="#9E9E9E"
                    android:visibility="gone" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <!-- Sent Message Layout -->
    <LinearLayout
        android:id="@+id/layoutSentMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:layout_marginBottom="4dp"
        android:visibility="gone">

        <!-- Message Content -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="60dp"
            android:gravity="end">

            <!-- Message Bubble -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:cardElevation="3dp"
                app:cardBackgroundColor="#2196F3"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:minWidth="60dp"
                    android:maxWidth="280dp">

                    <!-- Message Text -->
                    <TextView
                        android:id="@+id/tvSentMessage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hi, I need help with my order"
                        android:textSize="15sp"
                        android:textColor="@color/white"
                        android:lineSpacingExtra="2dp"
                        android:lineSpacingMultiplier="1.1" />

                    <!-- Image Attachment -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cvSentImage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="1dp"
                        android:visibility="gone">

                        <ImageView
                            android:id="@+id/ivSentImage"
                            android:layout_width="200dp"
                            android:layout_height="150dp"
                            android:scaleType="centerCrop"
                            android:background="#E3F2FD" />

                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Message Info -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="4dp">

                <TextView
                    android:id="@+id/tvSentTimestamp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2:29 PM"
                    android:textSize="11sp"
                    android:textColor="#9E9E9E"
                    android:layout_marginEnd="6dp" />

                <!-- Message Status Icons -->
                <ImageView
                    android:id="@+id/ivMessageStatus"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_chat"
                    app:tint="#4CAF50"
                    android:visibility="visible" />

            </LinearLayout>

        </LinearLayout>

        <!-- User Avatar -->
        <FrameLayout
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginStart="10dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="8dp">

            <!-- Avatar Background -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardCornerRadius="18dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="#E3F2FD">

                <ImageView
                    android:id="@+id/ivUserAvatar"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_person"
                    app:tint="#2196F3" />

            </com.google.android.material.card.MaterialCardView>

        </FrameLayout>

    </LinearLayout>

    <!-- System Message Layout (for notifications, date separators, etc.) -->
    <LinearLayout
        android:id="@+id/layoutSystemMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:visibility="gone">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="1dp"
            app:cardBackgroundColor="#E8E8E8"
            app:strokeWidth="0dp">

            <TextView
                android:id="@+id/tvSystemMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Today"
                android:textSize="12sp"
                android:textColor="#666666"
                android:textStyle="bold"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:layout_gravity="center" />

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</LinearLayout> 